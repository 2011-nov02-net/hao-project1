@model IEnumerable<StoreApplication.WebApp.ViewModels.DetailedProductViewModel>

@{
    ViewData["Title"] = "CheckCart";
}

@{ Layout = "_StoreLayout";
}

<h1>CheckCart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UniqueID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCostPerProduct)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UniqueID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCostPerProduct)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.UniqueID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.UniqueID })
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="checkout">
    <p>Order Total: @TempData.Peek("Total")</p>
    <a asp-action="Proceed">Proceed To Checkout</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
